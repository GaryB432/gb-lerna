{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "eslint": {
      "aliases": ["e"],
      "description": "Add eslint",
      "factory": "./eslint"
    },
    "package": {
      "aliases": ["p"],
      "description": "A new package.",
      "factory": "./package",
      "schema": "./package/schema.json"
    },
    "prettier": {
      "description": "Add prettier.",
      "factory": "./prettier"
    },
    "repository": {
      "aliases": ["repo", "r"],
      "description": "A new Lerna monorepo",
      "factory": "./repository",
      "schema": "./repository/schema.json"
    }
  }
}
